<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="常用链接"
        android:textAlignment="center"
        android:layout_marginBottom="20sp"/>
    <ImageView
        android:id="@+id/img_court"
        android:layout_width="300sp"
        android:layout_height="90sp"
        android:src="@drawable/court"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="最高人民法院"
        android:layout_marginBottom="10sp"/>
    <ImageView
        android:id="@+id/img_puklaw"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:src="@drawable/pkulaw"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="北大法宝"
        android:layout_marginBottom="10sp"/>

    <ImageView
        android:id="@+id/img_nkcc"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:src="@drawable/nkcc"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="南开大学计控学院"
        android:layout_marginBottom="10sp"/>

    <ImageView
        android:id="@+id/img_nklaw"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:src="@drawable/nklaw"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="南开大学法学院"
        android:layout_marginBottom="10sp"/>

</LinearLayout>
